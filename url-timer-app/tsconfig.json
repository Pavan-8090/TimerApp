{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",

    "rootDir": "./src",
    "outDir": "./dist",

    "types": ["node"],
    "lib": ["ES2020"],

    "sourceMap": true,

    "strict": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "skipLibCheck": true
  }
}